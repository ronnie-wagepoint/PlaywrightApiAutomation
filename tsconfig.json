{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "lib": [
            "es2021"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "src/helper/types"
        ],
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@steps/*": [
                "src/test/steps/*"
            ],
            "@features/*": [
                "src/test/features/*"
            ],
            "@helper/*": [
                "src/helper/*"
            ]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test-results"
    ]
}