{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Cucumber Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/cucumber-js",
      "args": [
        "--config",
        "${workspaceFolder}/config/cucumber.js"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}